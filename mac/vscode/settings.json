{
  "editor.fontLigatures": false,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.startupEditor": "none",
  "terminal.integrated.lineHeight": 1,
  "peacock.affectStatusAndTitleBorders": true,
  "less.validate": false,
  "explorer.confirmDragAndDrop": false,
  "css.validate": false,
  "material-icon-theme.activeIconPack": "react_redux",
  "editor.formatOnPaste": true,
  "editor.suggestSelection": "first",
  "material-icon-theme.files.associations": {},
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "peacock.favoriteColors": [
    {
      "name": "Angular Red",
      "value": "#b52e31"
    },
    {
      "name": "Auth0 Orange",
      "value": "#eb5424"
    },
    {
      "name": "Azure Blue",
      "value": "#007fff"
    },
    {
      "name": "C# Purple",
      "value": "#68217A"
    },
    {
      "name": "Gatsby Purple",
      "value": "#639"
    },
    {
      "name": "Go Cyan",
      "value": "#5dc9e2"
    },
    {
      "name": "Java Blue-Gray",
      "value": "#557c9b"
    },
    {
      "name": "JavaScript Yellow",
      "value": "#f9e64f"
    },
    {
      "name": "Mandalorian Blue",
      "value": "#1857a4"
    },
    {
      "name": "Node Green",
      "value": "#215732"
    },
    {
      "name": "React Blue",
      "value": "#00b3e6"
    },
    {
      "name": "Something Different",
      "value": "#832561"
    },
    {
      "name": "Vue Green",
      "value": "#42b883"
    },
    {
      "name": "OCaml Orange",
      "value": "#f2870b"
    },
    {
      "name": "dotfiles",
      "value": "#686b69"
    },
    {
      "name": "rescript",
      "value": "#d23f3f"
    }
  ],
  "editor.codeLensFontFamily": "'FiraCode Nerd Font Mono'",
  "editor.fontWeight": "300",
  "[javascriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "editor.codeLensFontSize": 12,
  "terminal.integrated.fontSize": 12,
  "files.autoSave": "afterDelay",
  "workbench.iconTheme": "material-icon-theme",
  "material-icon-theme.saturation": 1,
  "editor.fontFamily": "'FuraMono Nerd Font Mono', 'Noto Mono', 'CaskaydiaCove Nerd Font', 'YaHei Consolas Hybrid', 'FiraCode Nerd Font Mono', 'FiraMono Nerd Font', 'DejaVu Sans Mono'",
  "[css]": {
    "editor.defaultFormatter": "Wscats.qf"
  },
  "material-icon-theme.folders.color": "#42a5f5",
  "editor.accessibilitySupport": "off",
  "editor.mouseWheelZoom": true,
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.quickSuggestions": {
    "strings": true
  },
  "emmet.excludeLanguages": ["markdown"],
  "[ocaml]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "ocamllabs.ocaml-platform",
    "editor.formatOnSave": true,
    "editor.insertSpaces": true
  },
  "ocaml.sandbox": {
    "kind": "custom",
    "switch": "${workspaceFolder:monorepo}/frontend",
    "template": "esy $prog $args --fallback-read-dot-merlin"
  },
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": "\\.re$",
        "isAsync": true,
        "cmd": "yarn bsrefmt --in-place -w 120 ${file}"
      }
    ]
  },
  "terminal.integrated.defaultProfile.linux": "zsh",
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "material-icon-theme.opacity": 0.69999999999999996,
  "terminal.explorerKind": "external",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "terminal.integrated.cursorStyle": "line",
  "workbench.sideBar.location": "left",
  "editor.codeActionsOnSave": {
    "source.organizeImports": true,
    "source.fixAll": true
  },
  "terminal.integrated.fontWeight": "600",
  "debug.console.fontSize": 146,
  "explorer.confirmDelete": false,
  "remote.WSL.debug": true,
  "terminal.integrated.cursorBlinking": true,
  "scss.lint.unknownAtRules": "ignore",
  "[dart]": {
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": false,
    "editor.selectionHighlight": false,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.rulers": [80]
  },
  "prettier.singleQuote": true,
  "security.workspace.trust.untrustedFiles": "open",
  "terminal.integrated.fontFamily": "'FiraCode Nerd Font Mono','CaskaydiaCove Nerd Font','MesloLGS NF', 'Cascadia Mono PL'",
  "diffEditor.ignoreTrimWhitespace": false,
  "scss.validate": false,
  "editor.lineHeight": 20,
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1"
  },
  "editor.fontSize": 13,
  "editor.cursorBlinking": "smooth",
  "editor.cursorStyle": "line",
  "[csharp]": {
    "editor.formatOnSave": true
  },
  "editor.formatOnType": true,
  "[sql]": {
    "editor.defaultFormatter": "ms-ossdata.vscode-postgresql"
  },
  "[python]": {
    "editor.formatOnType": true
  },

  "files.watcherExclude": {
    "**/_build/**": true,
    "**/_opam/**": true,
    "**/esy.lock/**": true,
    "**/_esy/**": true,
    "**/lib/bs/**": true,
    "**/lib/js/**": true,
    "**/lib/ocaml/**": true,
    "**/*.bs.js": true,
    "**/rust/target/**": true,
    "**/.ammonite": true,
    "**/.bloop": true,
    "**/.metals": true
  },

  "remote.SSH.useLocalServer": false,
  "remote.SSH.remotePlatform": {
    "nspawn": "linux"
  },
  "[reason]": {
    "editor.codeLens": false,
    "editor.autoIndent": "full"
  },

  // vim
  "vim.leader": "<space>",
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useCtrlKeys": true,
  "vim.showcmd": true,
  "vim.joinspaces": true,
  "vim.useSystemClipboard": true,
  "vim.autoindent": true,
  "vim.ignorecase": true,
  "vim.hlsearch": true,
  "vim.handleKeys": {
    "<C-f>": false,
    "<C-a>": false,
    "<C-v>": false,
    "<C-d>": true,
    "<C-y>": false,
    "<C-z>": false,
    "<C-c>": false,
    "<C-x>": false
  },
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "after": ["d", "d"],
      "before": ["<leader>", "d"]
    },
    {
      "commands": [":nohl"],
      "before": ["<C-n>"]
    },
    {
      "commands": ["workbench.action.nextEditor"],
      "before": ["<gt>"]
    },
    {
      "commands": ["workbench.action.previousEditor"],
      "before": ["<gT>"]
    },
    {
      "before": ["leader", "s"],
      "commands": ["workbench.action.files.save"]
    },
    {
      "commands": ["workbench.action.toggleSidebarVisibility"],
      "before": ["<leader>", "e"]
    },
    {
      "commands": ["revealInExplorer"],
      "before": ["<leader>", "f"]
    },
    {
      "commands": ["workbench.view.explorer"],
      "before": ["<leader>", "h"]
    },
    {
      "commands": ["workbench.action.showCommands"],
      "before": [":"]
    },
    {
      "commands": ["workbench.action.files.save"],
      "before": ["<C-s>"]
    },
    {
      "before": ["<leader>", "k"],
      "commands": [
        {
          "command": "editor.action.showDefinitionPreviewHover"
        }
      ]
    }
  ],
  "vim.insertModeKeyBindings": [
    {
      "after": ["<Esc>"],
      "before": ["j", "k"]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "commands": ["editor.action.indentLines"],
      "before": [">"]
    },
    {
      "commands": ["editor.action.outdentLines"],
      "before": ["<"]
    }
  ]
}
