{
  "languageserver": {
    "ocaml-lsp": {
      "command": "opam",
      "args": ["config", "exec", "--", "ocamllsp"],
      "filetypes": ["ocaml", "reason"]
    },

    // "ocaml-lsp": {
    //   "command": "esy",
    //   "args": ["sh", "-c", "ocamllsp"],
    //   "filetypes": ["ocaml", "reason"]
    // },

    "rescript": {
      "enable": true,
      "module": "~/.local/share/nvim/site/pack/jazz/start/vim-rescript/server/out/server.js",
      "args": ["--node-ipc"],
      "filetypes": ["rescript"],
      "rootPatterns": ["bsconfig.json"]
    }
  },

  "coc.preferences.formatOnSaveFiletypes": ["*"],
  "tsserver.formatOnType": true,
  "coc.preferences.formatOnType": true,
  "diagnostic.errorSign": "•",
  "diagnostic.warningSign": "•",
  "diagnostic.infoSign": "•",
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "wxss.validate": false
}
