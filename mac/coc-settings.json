{
  "languageserver": {
    "ocaml-lsp": {
      "enable": true,
      "command": "opam",
      "args": ["config", "exec", "--", "ocamllsp"],
      "filetypes": ["ocaml", "reason"]
    },

    // "ocaml-lsp": {
    //   "command": "esy",
    //   "args": ["sh", "-c", "ocamllsp"],
    //   "filetypes": ["ocaml", "reason"]
    // },

    "rescript": {
      "enable": true,
      "module": "~/.local/share/nvim/site/pack/jazz/start/vim-rescript/server/out/server.js",
      "args": ["--node-ipc"],
      "filetypes": ["rescript"],
      "rootPatterns": ["bsconfig.json"]
    }
  },
  "tailwindCSS.headwind.runOnSave": false,
  "tailwindCSS.jsLanguages": [
    "javascript",
    "javascriptreact",
    "reason",
    "typescriptreact",
    "rescript"
  ],
  "coc.preferences.formatOnSaveFiletypes": ["*"],
  "coc.preferences.formatOnType": true,
  "tsserver.formatOnType": true,
  "diagnostic.errorSign": "•",
  "diagnostic.warningSign": "•",
  "diagnostic.infoSign": "•",
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "wxss.validate": false,

  "list.normalMappings": {
    "<C-c>": "do:exit"
  },
  "list.insertMappings": {
    "<C-c>": "do:exit"
  }
}
